<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlCustomCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/rlTopHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:minWidth="150dp"
                    app:cardCornerRadius="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#70101010"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_stop"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:contentDescription="Stop Button"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/ic_stop"
                            android:visibility="gone"
                            tools:ignore="HardcodedText" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:paddingStart="20dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:id="@+id/iv_video"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:contentDescription="Video Icon"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_video"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:id="@+id/iv_rec"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerVertical="true"
                                android:contentDescription="Record Button"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_toEndOf="@+id/iv_video"
                                android:src="@drawable/ic_record"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/tv_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_toEndOf="@+id/iv_rec"
                                android:text=""
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tv_half_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_toEndOf="@+id/tv_timer"
                                android:text=""
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_camera_settings"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="Camera settings"
                        android:src="@drawable/ic_camera_settings"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_400dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_toEndOf="@+id/ic_camera_settings"
                        app:cardCornerRadius="@dimen/_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <RelativeLayout
                                android:id="@+id/rl_team_one"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:background="@color/white"
                                android:padding="@dimen/_5dp">

                                <TextView
                                    android:id="@+id/tv_team_one_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toStartOf="@+id/tv_team_one_score"
                                    android:gravity="start"
                                    android:paddingStart="@dimen/_5dp"
                                    android:paddingEnd="@dimen/_5dp"
                                    android:text="Team 2"
                                    android:textSize="@dimen/_8sp"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_team_one_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_team_two"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:background="@color/white"
                                android:backgroundTint="@color/dot_dark_screen1"
                                android:padding="@dimen/_5dp">

                                <TextView
                                    android:id="@+id/tv_team_two_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_team_two_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/tv_team_two_score"
                                    android:gravity="end"
                                    android:paddingStart="@dimen/_5dp"
                                    android:paddingEnd="@dimen/_5dp"
                                    android:text="Team 4"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <!-- Left Buttons -->
                <LinearLayout
                    android:id="@+id/leftBtnLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:minHeight="50dp"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:layout_gravity="start">

                    <LinearLayout
                        android:id="@+id/llTor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgTor"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="Tor One"
                            android:maxWidth="44dp"
                            android:src="@drawable/tor_one"
                            app:tint="@color/white"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tor"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llChance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgChance"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="Chance One"
                            android:maxWidth="44dp"
                            android:src="@drawable/chance_one"
                            app:tint="@color/white"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llHighlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgHighlight"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Highlight"
                            android:maxWidth="44dp"
                            android:src="@drawable/highlight"
                            app:tint="@color/white"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highlight"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Right Buttons -->
                <LinearLayout
                    android:id="@+id/rightBtnLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:minHeight="50dp"
                    android:layout_alignParentEnd="true"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:id="@+id/llTor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            app:tint="@color/dot_dark_screen1"
                            android:id="@+id/imgTor1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:maxWidth="44dp"
                            android:contentDescription="Tor Two"
                            android:src="@drawable/tor_two"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tor"
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/dot_dark_screen1"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llChance2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgChance1"
                            android:contentDescription="Chance Two"
                            app:tint="@color/dot_dark_screen1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:maxWidth="44dp"
                            android:rotationY="180"
                            android:src="@drawable/chance_two"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chance"
                            android:textSize="@dimen/_12sp"
                            android:textColor="@color/dot_dark_screen1"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llHighlight2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/_60dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgHighlight1"
                            app:tint="@color/dot_dark_screen1"
                            android:layout_width="40dp"
                            android:contentDescription="Highlight Button"
                            android:layout_height="40dp"
                            android:maxWidth="44dp"
                            android:src="@drawable/highlight"
                            tools:ignore="HardcodedText" />

                        <com.codersworld.awesalibs.customFonts.SBTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highlight"
                            android:textColor="@color/dot_dark_screen1"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <!--Count Down Label-->
            <TextView
                android:id="@+id/countdown_timer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:shadowColor="@color/dark_gray"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="5"
                android:textColor="@color/colorAccent"
                android:textSize="100sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
            <!--Zoom Controls-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:id="@+id/imgZoomOut"
                    android:padding="@dimen/_5dp"
                    android:contentDescription="Zoom In Button"
                    android:src="@drawable/zoom_out"
                    app:tint="@color/dot_dark_screen1"
                    tools:ignore="HardcodedText" />
                <com.codersworld.awesalibs.customFonts.SBTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_44dp"
                    android:minWidth="80dp"
                    android:text="1.0x"
                    android:id="@+id/txtZoom"
                    android:textSize="@dimen/_20sp"
                    android:textColor="@color/dot_dark_screen1"
                    android:gravity="center"
                    tools:ignore="HardcodedText" />
                <ImageView
                    android:layout_width="@dimen/_44dp"
                    android:layout_height="@dimen/_44dp"
                    android:id="@+id/imgZoomIn"
                    android:contentDescription="Zoom In"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/zoom_in"
                    app:tint="@color/dot_dark_screen1"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </RelativeLayout>

        <!--Switching Layout-->
        <RelativeLayout
            android:id="@+id/statusOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCFFFFFF"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/progressLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical">

                <com.codersworld.awesalibs.customFonts.SBTextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_wait_msg"
                    android:textColorLink="@color/black"
                    android:textSize="@dimen/_16sp"
                    android:visibility="gone" />

                <com.codersworld.awesalibs.customFonts.SBTextViewBold
                    android:id="@+id/tvUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0%"
                    android:textColorLink="@color/black"
                    android:textSize="@dimen/_25sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:text="@string/lbl_start_first_half"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </RelativeLayout>
    </FrameLayout>
</layout>